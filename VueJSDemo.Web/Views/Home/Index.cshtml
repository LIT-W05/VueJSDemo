
<div id="app">
    <input type="text" class="form-control" v-model="message"/>
    <button class="btn btn-primary" v-on:click="buttonClick">Reverse</button>
    <h2>{{message}}</h2>
    <br/>
    <button class="btn btn-danger" v-on:click="randomNumClick">Add Number</button>
    <button class="btn btn-success" v-on:click="sortClick">Sort numbers</button>
    <ul>
        <template v-for="number in numbers">
            <li style="font-size: 20px;">{{number}}</li>
        </template>
    </ul>
    
    
    <h3>Random number generator</h3>
    <input type="text" class="form-control" placeholder="Min" v-model="min"/>
    <br/>
    <input type="text" class="form-control" placeholder="Max" v-model="max" />
    <br />
    <button class="btn btn-warning" v-on:click="addRandomNumber">Get Random Number</button>
    <div style="height: 400px; overflow: scroll;">
        <template v-for="randomNum in randomNumbers">
            <div class="well" style="margin: 1px; padding: 2px;">
                <h4>{{randomNum}}</h4>
            </div>
        </template>
    </div>
</div>




@section scripts {
    <script src="/Scripts/vue.js"></script>
    <script src="/Scripts/index.js"></script>
}